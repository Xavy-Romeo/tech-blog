<article>
  
  <form class="edit-post-form">
    <div class="form-header">
      <p>Edit Post</p>
    </div>
    
    <div class="form-body">

      <div>
        <label for="post-title">Blog Title:</label>
        <input name="post-title" type="text" value="{{post.title}}" />
      </div>
      
      <div>  
        <label for="post-content">Blog Text:</label>
        <textarea class="textarea" name="post-content">{{post.content}}</textarea>
      </div>
      
      
      
      <button type="submit">Save Changes</button>
      <button type="button" class="delete-post-btn">Delete Post</button>
  
    </div>

  </form>

</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>